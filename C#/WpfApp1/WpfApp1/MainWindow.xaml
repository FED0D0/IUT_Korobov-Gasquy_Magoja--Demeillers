<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="Réception" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="3" Grid.Row="1" >
            <TextBox x:Name="textBoxReception" TextChanged="TextBox_TextChanged" Background="#FFABADB3" BorderBrush="#FFABADB3" AcceptsReturn="True" IsReadOnly="True" SelectionTextBrush="White" />
        </GroupBox>
        <GroupBox x:Name="Emition" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="1" RenderTransformOrigin="0.5,0.5" Grid.Row="1" >
            <TextBox x:Name="textBoxEmission" AcceptsReturn="True" Background="#FFABADB3" KeyUp="textBoxEmission_KeyUp" />
        </GroupBox>
        <Button x:Name="buttonEnvoyer" Grid.Column="1" Grid.Row="2" Content="Envoyer" Click="buttonEnvoyer_Click" Margin="128,30,127,0" Grid.RowSpan="2" />
        <Button x:Name="buttonClear" Grid.Column="3" Content="Clear" Margin="127,30,128,0" Grid.Row="2" Grid.RowSpan="2" Click="buttonClear_Click"/>
        <Button Grid.Column="1" Content="Test" Margin="320,30,320,0" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Click="Button_Click"/>
    </Grid>
</Window>
